@page "/admin/products"
@inject IProductService ProductService
@inject NavigationManager NavigationManager
@attribute [Authorize(Roles = "Admin")]



<h3>Produse</h3>

@if (ProductService.AdminProducts == null)
{
    <div class="loading">
        <span>Produsele se incarca...</span>
    </div>
}
else
{
    <button class="btn btn-primary float-end" @onclick="CreateProduct">
        <i class="oi oi-plus"></i> Adauga un nou produs
    </button>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Produs</th>
                <th>Varianta produs</th>
                <th>Pret</th>
                <th>Vizibil</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <Virtualize Items="ProductService.AdminProducts" Context="product">
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" />
                        }
                        else if (product.Images.Count > 0)
                        {
                            <img src="@product.Images[0].Data" />
                        }
                    </td>
                    <td>@product.Title</td>
                    <td>
                        @foreach (var variant in product.Variants)
                        {
                            <span>@variant.ProductType.Name</span>

                            <br />
                        }
                    </td>
                    <td>
                        @foreach (var variant in product.Variants)
                        {
                            <span>@variant.Price</span>
                            <br />
                        }
                    </td>
                    <td>@(product.Visible ? "✔️" : "")</td>
                    <td>
                        <button class="btn btn-primary" @onclick="(() => EditProduct(product.Id))">
                            <i class="oi oi-pencil"></i> Editeaza
                        </button>
                    </td>
                </tr>
            </Virtualize>
        </tbody>
    </table>
}



@code {
	protected override async Task OnInitializedAsync()
	{
		await ProductService.GetAdminProducts();
	}

	void EditProduct(int productId)
	{
		NavigationManager.NavigateTo($"admin/product/{productId}");
	}

	void CreateProduct()
	{
		NavigationManager.NavigateTo("admin/product");
	}
}
