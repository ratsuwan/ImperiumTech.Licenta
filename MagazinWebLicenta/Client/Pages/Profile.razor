@page "/profile"
@inject IAuthService AuthService
@attribute [Authorize]

<AuthorizeView>
	<h3>HEY! Esti conectat cu <i>@context.User.Identity.Name</i></h3>
</AuthorizeView>

<h5>Adresa de livrare</h5>
<AddressForm />
<p></p>

<h5>Schimba parola</h5>

<EditForm Model="request" OnValidSubmit="ChangePassword">
	<DataAnnotationsValidator></DataAnnotationsValidator>
	<div class="mb-3">
		<label for="password"> Parola noua</label>
		<InputText id="password" @bind-Value="request.Password" class="form-control" type="password" />
		<ValidationMessage For="@(() => request.Password)" />
	</div>
	<div class="mb-3">
		<label for="confirmPassword">Confirma parola noua</label>
		<InputText id="confirmPassword" @bind-Value="request.ConfirmPassword" class="form-control" type="password" />
		<ValidationMessage For="@(() => request.ConfirmPassword)" />
	</div>
	<button type="submit" class="btn btn-primary">Inregistare</button>
	
</EditForm>
@message



@code {
	UserChangePassword request = new UserChangePassword();
	string message = string.Empty;

	private async Task ChangePassword()
	{
		var result = await AuthService.ChangePassword(request);
		message = result.Message;
	}
}
